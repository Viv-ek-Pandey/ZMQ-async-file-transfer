{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowAllResources",
            "Effect": "Allow",
            "Action": [
                "ec2:GetConsoleOutput",
                "ec2:DescribeInstances",
                "ec2:DescribeSnapshots",
                "ec2:DescribeInternetGateways",
                "ec2:DescribeVolumeStatus",
                "ec2:DescribeVolumes",
                "ec2:DescribeKeyPairs",
                "ec2:DescribeRouteTables",
                "ec2:DescribeSnapshotAttribute",
                "ec2:DescribeSecurityGroupRules",
                "ec2:DescribeInstanceTypes",
                "ec2:DescribeSubnets",
                "ec2:DescribeVpnGateways",
                "ec2:DescribeAddresses",
                "ec2:DescribeRegions",
                "ec2:DescribeInstanceTypeOfferings",
                "ec2:DescribeNetworkInterfaces",
                "ec2:DescribeAvailabilityZones",
                "ec2:DescribeInstanceStatus",
                "ec2:DescribeTags",
                "ec2:DescribeNatGateways",
                "ec2:DescribeLocalGateways",
                "ec2:DescribeSecurityGroups",
                "ec2:DescribeImages",
                "ec2:DescribeVpcs",
                "ec2:CreateTags",
                "ec2:CreateNetworkInterface",
                "ebs:GetSnapshotBlock",
                "ebs:ListChangedBlocks",
                "ebs:ListSnapshotBlocks",
                "ebs:StartSnapshot",
                "sns:GetTopicAttributes",
                "sns:ListTopics",
                "sns:CreateTopic",
                "sns:TagResource",
                "kms:ListKeys",
                "kms:ListAliases",
                "cloudwatch:DescribeAlarms",
                "cloudwatch:PutMetricData",
                "cloudwatch:TagResource",
                "cloudwatch:PutMetricAlarm",
                "ec2:AssociateAddress",
                "ec2:DisassociateAddress"
            ],
            "Resource": "*"
        },
        {
            "Sid": "AllowDMResources",
            "Effect": "Allow",
            "Action": [
                "ec2:StartInstances",
                "ec2:AttachVolume",
                "ec2:DetachVolume",
                "ec2:DeleteVolume",
                "ec2:DeleteSnapshot",
                "ec2:DeleteTags",
                "ec2:StopInstances",
                "ec2:RebootInstances",
                "ec2:ModifyLaunchTemplate",
                "ec2:TerminateInstances",
                "ec2:ModifyInstanceAttribute",
                "ec2:AttachNetworkInterface",
                "ec2:DetachNetworkInterface",
                "ec2:DeleteNetworkInterface",
                "ebs:CompleteSnapshot",
                "ebs:PutSnapshotBlock",
                "sns:DeleteTopic",
                "cloudwatch:SetAlarmState",
                "cloudwatch:DeleteAlarms",
                "cloudwatch:EnableAlarmActions",
                "cloudwatch:DisableAlarmActions"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:ResourceTag/Protected-By-Datamotive": "Datamotive protected resource"
                }
            }
        },
        {
            "Sid": "AllowRunInstance",
            "Effect": "Allow",
            "Action": [
                "ec2:RunInstances",
                "ec2:StartInstances"
            ],
            "Resource": [
                "arn:aws:ec2:*::image/*",
                "arn:aws:ec2:*:*:subnet/*",
                "arn:aws:ec2:*:*:network-interface/*",
                "arn:aws:ec2:*:*:security-group/*",
                "arn:aws:ec2:*:*:key-pair/*",
                "arn:aws:license-manager:*:*:license-configuration:*",
                "arn:aws:resource-groups:*:*:group/*"
            ]
        },
        {
            "Sid": "AllowDMCreate",
            "Effect": "Allow",
            "Action": [
                "ec2:RunInstances",
                "ec2:CreateVolume"
            ],
            "Resource": [
                "arn:aws:ec2:*:*:volume/*",
                "arn:aws:ec2:*:*:instance/*"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:RequestTag/Protected-By-Datamotive": "Datamotive protected resource"
                }
            }
        },
        {
            "Sid": "AllowDMCreateVolume",
            "Effect": "Allow",
            "Action": [
                "ec2:CreateVolume"
            ],
            "Resource": [
                "arn:aws:ec2:*:*:snapshot/*"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:ResourceTag/Protected-By-Datamotive": "Datamotive protected resource"
                }
            }
        },
        {
            "Sid": "AllowDMSnapshotResource",
            "Effect": "Allow",
            "Action": [
                "ec2:CreateSnapshots"
            ],
            "Resource": [
                "arn:aws:ec2:*:*:volume/*",
                "arn:aws:ec2:*:*:instance/*"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:ResourceTag/Protected-By-Datamotive": "Datamotive protected resource"
                }
            }
        },
        {
            "Sid": "AllowDMSnapshotRequest",
            "Effect": "Allow",
            "Action": [
                "ec2:CreateSnapshots"
            ],
            "Resource": [
                "arn:aws:ec2:*:*:snapshot/*"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:RequestTag/Protected-By-Datamotive": "Datamotive protected resource"
                }
            }
        },
        {
            "Sid": "AllowCopyFromSourceCreate",
            "Effect": "Allow",
            "Action": [
                "ec2:CreateSubnet",
                "ec2:CreateSecurityGroup"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:RequestTag/Protected-By-Datamotive": "Datamotive protected resource"
                }
            }
        },
        {
            "Sid": "AllowCopyFromSourceUpdate",
            "Effect": "Allow",
            "Action": [
                "ec2:UpdateSecurityGroupRuleDescriptionsIngress",
                "ec2:UpdateSecurityGroupRuleDescriptionsEgress",
                "ec2:RevokeSecurityGroupIngress",
                "ec2:RevokeSecurityGroupEgress",
                "ec2:AuthorizeSecurityGroupIngress",
                "ec2:AuthorizeSecurityGroupEgress",
                "ec2:DeleteSecurityGroup"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:ResourceTag/Protected-By-Datamotive": "Datamotive protected resource"
                }
            }
        }
    ]
}     